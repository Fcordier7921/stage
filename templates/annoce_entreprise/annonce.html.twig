{% extends 'base.html.twig' %}

{% block title %}Offre de stage{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h2 class="text-center my-3">Espace entreprise: Offre de stage</h2>
    <div class="row">
        <div class="col-12 col-md-3">
            <h4>{{info.nom}}</h4>
                <h6>{{info.adress}}</h6>
                <p>{{info.codePostal}}</p><br>
                <p>{{info.ville}}</p><br>
                <p>{{info.telephone}}</p><br>
                <a href="{{info.email}}">{{info.email}}</a><br>
                <a href="{{info.siteNet}}">{{info.siteNet}}</a><br>
                
        
            <div>
                <a type="button" href="{{path('update_entreprise', {'ide':info.id, 'idu':entreprise})}}" value="modifier">modifier</a>
                
            </div>
            <div>
            
                <h4>Les contacts de l'entreprise {{info.nom}} :</h4>
                    <p>Pour ajouter un colaborateur cliqué<a href="{{path('contact_registere', {'idu':entreprise, 'ide':info.id})}}" class="mx-5">IcI</a></p>
                
                {% if contacts !=null %}
                    {% for contact in contacts %}
                    
                        <h5>{{contact.nom}}</h5>
                        <h6>{{contact.prenom}}</h6>
                        <p>{{contact.telephone}}</p>
                        <p>{{contact.email}}</p>
                        <a href="{{path('contact_Updeat', {'idc':contact.id,'idu':entreprise})}}">Modifier</a>
                        
                {% endfor %}
                    
                {% else %}
                    <p>Merci d'ajouter un contact</p>   
                {% endif %}
                
            </div>
           
        </div>
        
        <div class="col-12 col-md-8">
            <div class="my-3">
            <a href="{{path('annonce_register', {'idu':entreprise, 'ide':info.id})}}">Ajouter une offre de stage</a>
            <a href="{{path('entreprise_fiche', {'id':entreprise})}}">Retour</a>
            {% if annonces !=null %}
                
                    
                
                    {% for annonce in annonces %}
                    
                        
                            <h5>{{annonce.titre}}</h5>
                            <h6>{{annonce.contenue|striptags}}</h6>
                            <p>{{annonce.specification}}</p>
                            <p>Etat de validation de l'annace :{%  if annonce.	etatValidation != null %} 
                                Annonce publier
                            {% else %}
                                Annoce en cour de validation
                            {% endif %}</p>
                            
                            <a href="{{path('annonce_updeat', {'idu':entreprise, 'ide':info.id, 'ida':annonce.id})}}">Modifier</a>
                            <a href="{{path('annonce_remove', {'idu':entreprise, 'ide':info.id, 'ida':annonce.id})}}" onclick="return confirm('êtes-vous sûr de vouloir supprimer {{ annonce.titre}}')">suprimer</a>
                        
                {% endfor %}
                    
                {% else %}
                    <p>Merci une offre de stage</p>   
                {% endif %}
            

        </div>
    </div>
       
    
</div>
{% endblock %}