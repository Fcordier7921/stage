{% extends 'base.html.twig' %}

{% block title %}liste apprenant{% endblock %}

{% block body %}

    <h1 class="text-center">Notre liste d'appreant a la recherche d'un stage</h1>
    <div class="row mx-5">
        {% for apprenant in apprenants %}
                                
            <div class="col-12 col-md-2 boxe mx-5 my-3" style="background-image: url(/uploads/brochures/{{apprenant.avatar}}); background-size: cover;">
                <h4>{{apprenant.nom}}</h4>
                <h6>{{apprenant.prenom}}</h6>
                <p>compt√©tences:{{apprenant.competences}}</p>
                <a href="{{apprenant.portfolio}}">{{apprenant.portfolio}}</a>
                <a href="{{apprenant.git}}">{{apprenant.git}}</a>
                <a href="{{apprenant.cv}}">{{apprenant.cv}}</a>
            </div>   
                  
        {% endfor %}

    </div>
{% endblock %}